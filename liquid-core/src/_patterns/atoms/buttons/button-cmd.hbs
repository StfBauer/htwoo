{{# if ddItems }}
<div class="lqd-buttoncmd{{ modifier }}" aria-haspopup="true">
    <button class="lqd-buttoncmd{{ modifier }}" aria-haspopup="true">
        <span class="lqd-button-icon" aria-hidden="true"> {{> atoms-icon iconname=iconAction }} </span>
        <span class="lqd-button-label"> {{label}} </span>
        {{!-- When no drop down items are shown there is not need to show the dropdown --}}
        <span class="lqd-button-icon lqd-buttonchevron"> {{> atoms-icon iconname=iconDown }} </span>
    </button>
    {{!-- When no drop down items are shown there is not need to show the dropdown --}}
    {{> atoms-menu-flyouts contextItems=ddItems }}
</div>
{{ else }}
{{!-- Variant when no command bar is present --}}
<div class="lqd-buttoncmd{{ modifier }}">
    <button class="lqd-buttoncmd{{ modifier }}">
        <span class="lqd-button-icon" aria-hidden="true"> {{> atoms-icon iconname=iconAction }} </span>
        <span class="lqd-button-label"> {{label}} </span>
        {{!-- When no drop down items are shown there is not need to show the dropdown
        * No Chevron
        --}}
    </button>
    {{!--
    * No Flyout gets rendered either
    --}}
</div>
{{/ if }}